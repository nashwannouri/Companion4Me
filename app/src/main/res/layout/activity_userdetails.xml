<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="#01579b"
        app:contentInsetStart="0dp"
        style="@style/Toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="backToSetting"
                android:background="@drawable/ic_action_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Credentials"
                android:textColor="#FFF"
                android:textSize="25dp"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>


    <com.gc.materialdesign.views.ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <!-- FLAT BUTTON -->

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/relativeChangeNameText"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#01579b"
                    android:layout_centerVertical="true"
                    android:text="Change Name"
                    />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#1E88E5" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:id="@+id/relativeEditFirstname"
                android:layout_height="wrap_content" >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#01579b"

                    android:id="@+id/etchangeName"
                    android:hint="First Name..."
                    android:textSize="12dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/relativeLastName"
                android:layout_below="@+id/relativeEditFirstname"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#01579b"
                    android:layout_centerVertical="true"
                    android:text="Change Last Name" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:id="@+id/relativeEditLastname"
                android:layout_height="wrap_content" >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#01579b"

                    android:id="@+id/etLastname"
                    android:hint="Last Name.."
                    android:textSize="12dp"
                    />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#01579b"
                    android:layout_centerVertical="true"
                    android:text="Change Password" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#1E88E5" />
            </RelativeLayout>



            <!-- RECTANGLE BUTTON -->

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="52dp" >


                <EditText
                    android:id="@+id/etNewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#01579b"

                    android:textSize="12dp"
                    android:hint="Enter New Password"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true" />

            </RelativeLayout>



            <RelativeLayout
                android:layout_width="wrap_content"
                android:id="@+id/relativeEtEducation"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#01579b"
                    android:layout_centerVertical="true"
                    android:text="Change Education Status" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:id="@+id/relativeEducation"
                android:layout_height="wrap_content" >

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#01579b"
                    android:id="@+id/spinnerEducation"
                    android:hint="Last Name.."
                    android:textSize="12dp"
                    />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:id="@+id/relativeLocation"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#01579b"
                    android:layout_centerVertical="true"
                    android:text="Change Location" />

            </RelativeLayout>



            <RelativeLayout
                android:layout_width="wrap_content"
                android:id="@+id/relativeEditLocation"
                android:layout_height="wrap_content" >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#01579b"

                    android:id="@+id/etLocation"
                    android:hint="Change Location"
                    android:textSize="12dp"
                    />

            </RelativeLayout>


            <!-- SMALL FLOAT BUTTON -->

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="120dp" >

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/radioGroup">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:id="@+id/maleRadioButton"
                        android:textColor="#01579b"

                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:text="Male"
                        />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#01579b"
                        android:textSize="12dp"
                        android:id="@+id/femaleRadioButton"
                        android:text="Female"
                        />



                </RadioGroup>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="32dp"
                    android:layout_above="@+id/radioGroup"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#01579b"

                        android:layout_centerVertical="true"
                        android:text="Change Gender" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="#1E88E5" />
                </RelativeLayout>


            </RelativeLayout>

            <!-- FLOAT BUTTON -->


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="72dp" >


            </RelativeLayout>

            <!-- FLOAT BUTTON -->

        </LinearLayout>
    </com.gc.materialdesign.views.ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/btnDone"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
